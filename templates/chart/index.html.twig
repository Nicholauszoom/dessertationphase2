{% extends 'base.html.twig' %}

{% block title %}Chart index{% endblock %}

{% block body %}
    <h1>Chart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chart in charts %}
            <tr>
                <td>{{ chart.id }}</td>
                <td>{{ chart.content }}</td>
                <td>
                    <a href="{{ path('app_chart_show', {'id': chart.id}) }}">show</a>
                    <a href="{{ path('app_chart_edit', {'id': chart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chart_new') }}">Create new</a>
{% endblock %}
